<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.covid19.covid_19tracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_corona"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_corona"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.covid19.covid_19tracker.activities.ContactUsActivity"></activity>
        <activity android:name="com.covid19.covid_19tracker.activities.MainActivity" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3596102289377036~3753165417" />

        <activity android:name="com.covid19.covid_19tracker.activities.DetailActivity" />
        <activity android:name="com.covid19.covid_19tracker.activities.AffectedCountriesActivity" />
        <activity
            android:name="com.covid19.covid_19tracker.activities.SplaceScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>