<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".activities.SplaceScreenActivity">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/coronalogosplace" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/worldc" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Check the worldwide spread"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/txt_size_24sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="with this app"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/txt_size_18sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:gravity="center_horizontal"
        android:text="By"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/txt_size_24sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:gravity="center_horizontal"
        android:text="Darshil V. Savaliya"
        android:textColor="#9F0909"
        android:textSize="@dimen/txt_size_18sp"
        android:textStyle="italic" />
</LinearLayout>